<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<style>
    body {
        padding-left: 18rem;
        padding-right: 18rem;
        padding-top: 2.5rem;
        padding-bottom: 2.5rem;
    }

    @media (max-width: 320px) {
        body {
            padding-left: 2.5rem;
            padding-right: 2.5rem;
        }
    }

    @media (max-width: 1024px) {
        body {
            padding-left: 2.5rem;
            padding-right: 2.5rem;
        }
    }

    @media (max-width: 768px) {
        body {
            padding-left: 3.5rem;
            padding-right: 3.5rem;
        }
    }

    .Loan {
        font-weight: 600;
        font-size: 1.875rem;
        line-height: 2.25rem;
    }

    .main {
        display: grid;
        gap: 1rem;
    }

    @media (min-width: 768px) {
        .main {
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1.75rem;
        }
    }

    .main2 {
        display: grid;
        gap: 1rem;
    }

    @media (min-width: 768px) {
        .main2 {
            grid-template-columns: repeat(3, minmax(0, 1fr));
            gap: 1.75rem;
        }
    }

    .sub-heading {
        font-size: 1.25rem;
        line-height: 1.75rem;
        font-weight: 400;
    }

    button {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
        padding-top: 0.25rem;
        padding-bottom: 0.25rem;
        --tw-bg-opacity: 1;
        background-color: rgb(34 197 94 / var(--tw-bg-opacity));
        --tw-text-opacity: 1;
        color: rgb(255 255 255 / var(--tw-text-opacity));
        font-size: 1.125rem;
        line-height: 1.75rem;
        border: none;
    }

    .text-lg {
        font-size: 1.125rem;
        line-height: 1.75rem;
    }

    .add-more {
        display: flex;
        justify-content: end;
        align-items: center;
    }
</style>

<body>
    <p class="Loan"><%= formTitle %></p>
    <form class="mt-5">
        <div class="main">
            <div>
                <label for="desired-loan" class="form-label">Desired Loan Amount $</label>
                <input placeholder="0" type="number" class="form-control" id="desired-loan" value="<%= desiredLoan %>">
            </div>
            <div>
                <label for="annual-income" class="form-label">Annual Income $</label>
                <input placeholder="0" type="number" class="form-control" id="annual-income" value="<%= annualIncome %>">
            </div>
        </div>

        <p class="sub-heading mt-3">Loan will be used for</p>
        <div class="main mt-2">
            <% loanOptions.forEach(option => { %>
                <div class="form-check flex items-center">
                    <input class="form-check-input" type="radio" name="loanUsage" id="loanUsage" value="<%= option %>">
                    <label class="form-check-label" for="loanUsage"><%= option %></label>
                </div>
            <% }); %>
        </div>

        <p class="sub-heading mt-3">Contact Information</p>
        <div class="main2">
            <div>
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" value="<%= title %>">
            </div>
            <div>
                <label for="first-name" class="form-label">First Name</label>
                <input type="text" class="form-control" id="first-name" value="<%= firstName %>">
            </div>
            <div>
                <label for="last-name" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="last-name" value="<%= lastName %>">
            </div>
        </div>

        <p class="sub-heading mt-3">Date of birth</p>
        <div class="main2 mt-2">
            <select name="dob-day" class="form-control" id="dob-day">
                <% for (let i = 1; i <= 31; i++) { %>
                    <option value="<%= i %>"><%= i %></option>
                <% } %>
            </select>
            <select name="dob-month" class="form-control" id="dob-month">
                <% months.forEach((month, index) => { %>
                    <option value="<%= index + 1 %>"><%= month %></option>
                <% }); %>
            </select>
            <select name="dob-year" class="form-control" id="dob-year">
                <% for (let i = 1971; i <= 2023; i++) { %>
                    <option value="<%= i %>"><%= i %></option>
                <% } %>
            </select>
        </div>

        <!-- Continue with other fields following a similar pattern -->

        <div style="display: flex; justify-content: center;">
            <button type="submit" class="btn btn-primary mt-3">Send Application Now</button>
        </div>
    </form>
</body>
<script>
    document.getElementById('add-reference-btn').addEventListener('click', function (event) {
        event.preventDefault();
        const template = document.getElementById('bank-reference-template').content.cloneNode(true);
        document.querySelector('.bank-reference-container').appendChild(template);
    });

    document.querySelector('.bank-reference-container').addEventListener('click', function (event) {
        if (event.target.classList.contains('remove-reference-btn')) {
            event.preventDefault();
            event.target.closest('.bank-reference-section').remove();
        }
    });
</script>
</html>
